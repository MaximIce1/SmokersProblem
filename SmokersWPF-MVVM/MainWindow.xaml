<Window x:Class="SmokersWPF_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmokersWPF_MVVM" 
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Window.DataContext>
        <local:Table x:Name="Table"/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <TextBox Width="30" Text="{Binding Res1, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
            <TextBox Width="30" Text="{Binding Res2, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
            <TextBox Width="30" Text="{Binding Res3, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
